<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block metaTitle %}Administrator's panel{% endblock %}</title>
    {% block styles %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.4/css/uikit.min.css" />
    {% endblock %}
</head>
<body>
<div id="maine-page-content">
    <header id="header-top">
        <nav class="uk-navbar uk-navbar-container">
            <div class="uk-navbar-right">

                <ul class="uk-navbar-nav">
                    <li class="uk-active">
                        <a href="/"><span uk-icon="icon: home"></span></a>
                    </li>
                    <li>
                        <a href="{{ path_for("logout") }}"><span uk-icon="icon: sign-out"></a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
    <div class="alert-wrapper">
        {% block alert %}{% endblock %}
    </div>
    <div class="uk-section admin-content-section">
        <div class="uk-container uk-container-expand">
            <div class="uk-grid">
                <div class="uk-width-1-4 sidebar">
                    <div class="uk-card uk-card-body uk-card-primary">
                        <ul class="uk-nav">
                            <li>
                                <a href="{{ path_for('pages.list') }}">
                                    <span uk-icon="icon: file-text"></span> Pages
                                </a>
                            </li>
                            <li>
                                <a href="{{ path_for('media.list') }}">
                                    <span uk-icon="icon: image"></span> Media
                                </a>
                            </li>
                            <li>
                                <a href="{{ path_for('user.list') }}">
                                    <span uk-icon="icon: users"></span> Users
                                </a>
                            </li>
                            <li class="uk-nav-divider"></li>
                        </ul>
                    </div>
                </div>
                <div class="uk-width-3-4">
                    <div class="uk-card uk-card-body uk-card-default">
                    {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.4/js/uikit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.4/js/uikit-icons.min.js"></script>
<script src="/bundle.js"></script>
{% endblock %}
</body>
</html>